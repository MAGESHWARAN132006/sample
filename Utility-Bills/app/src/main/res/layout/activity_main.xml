<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:an="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.doesnothaveadomain.splitunitcost.MainActivity"
    an:layout_width="match_parent"
    an:layout_height="wrap_content"
    an:layout_marginBottom="10dp">

    <android.support.constraint.ConstraintLayout
        an:layout_width="match_parent"
        an:layout_height="wrap_content">

        <TextView
            an:id="@+id/textView"
            an:layout_width="wrap_content"
            an:layout_height="wrap_content"
            an:layout_marginLeft="16dp"
            an:layout_marginTop="28dp"
            an:text="Units of 1st Floor Meter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            an:id="@+id/editTextUnitsOf1stFloor"
            an:layout_width="110dp"
            an:layout_height="wrap_content"
            an:layout_marginRight="16dp"
            an:layout_marginTop="16dp"
            an:ems="10"
            an:inputType="numberDecimal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            an:id="@+id/textView2"
            an:layout_width="wrap_content"
            an:layout_height="wrap_content"
            an:layout_marginLeft="16dp"
            an:layout_marginTop="16dp"
            an:text="Unit history of Sub-meter :"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <EditText
            an:id="@+id/editTextSubmeterUnitCurrentInput"
            an:layout_width="110dp"
            an:layout_height="wrap_content"
            an:layout_marginRight="16dp"
            an:layout_marginTop="128dp"
            an:ems="10"
            an:inputType="numberDecimal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            an:id="@+id/editTextSubmeterBillPrevInput"
            an:layout_width="110dp"
            an:layout_height="wrap_content"
            an:layout_marginRight="16dp"
            an:layout_marginTop="84dp"
            an:ems="10"
            an:inputType="numberDecimal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            an:id="@+id/textView7"
            an:layout_width="wrap_content"
            an:layout_height="wrap_content"
            an:layout_marginLeft="28dp"
            an:layout_marginTop="32dp"
            an:text="Water"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"/>

        <EditText
            an:id="@+id/editTextWaterBillInput"
            an:layout_width="110dp"
            an:layout_height="wrap_content"
            an:layout_marginRight="16dp"
            an:layout_marginTop="4dp"
            an:ems="10"
            an:inputType="number"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextElectricityBillOf4thFloor"/>

        <TextView
            an:id="@+id/textView8"
            an:layout_width="wrap_content"
            an:layout_height="wrap_content"
            an:layout_marginLeft="28dp"
            an:layout_marginTop="36dp"
            an:text="Gas"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>

        <EditText
            an:id="@+id/editTextGasInput"
            an:layout_width="110dp"
            an:layout_height="wrap_content"
            an:layout_marginRight="16dp"
            an:layout_marginTop="4dp"
            an:ems="10"
            an:inputType="number"
            an:text="800"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextWaterBillInput"/>

        <TextView
            an:id="@+id/textView9"
            an:layout_width="wrap_content"
            an:layout_height="wrap_content"
            an:layout_marginEnd="20dp"
            an:layout_marginTop="92dp"
            an:maxWidth="160dp"
            an:text="Reading of the month before last"
            app:layout_constraintEnd_toStartOf="@+id/editTextSubmeterBillPrevInput"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            an:id="@+id/textView10"
            an:layout_width="wrap_content"
            an:layout_height="wrap_content"
            an:layout_marginEnd="20dp"
            an:layout_marginTop="12dp"
            an:maxLines="2"
            an:maxWidth="160dp"
            an:text="Reading of Previous Month"
            app:layout_constraintEnd_toStartOf="@+id/editTextSubmeterUnitCurrentInput"
            app:layout_constraintTop_toBottomOf="@+id/textView9"/>

        <TextView
            an:id="@+id/textView12"
            an:layout_width="wrap_content"
            an:layout_height="wrap_content"
            an:layout_marginLeft="16dp"
            an:layout_marginTop="48dp"
            an:text="Electricity bill of 2nd Floor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"/>

        <TextView
            an:id="@+id/textView13"
            an:layout_width="wrap_content"
            an:layout_height="wrap_content"
            an:layout_marginLeft="16dp"
            an:layout_marginTop="48dp"
            an:text="Electricity bill of 4th Floor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14"/>

        <TextView
            an:id="@+id/textView14"
            an:layout_width="wrap_content"
            an:layout_height="wrap_content"
            an:layout_marginLeft="16dp"
            an:layout_marginTop="48dp"
            an:text="Electricity bill of 3rd Floor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"/>

        <EditText
            an:id="@+id/editTextElectricityBillOf2ndFloor"
            an:layout_width="110dp"
            an:layout_height="wrap_content"
            an:layout_marginRight="16dp"
            an:layout_marginTop="20dp"
            an:ems="10"
            an:inputType="number"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextElectricityBillOf1stFloor"/>

        <EditText
            an:id="@+id/editTextElectricityBillOf3rdFloor"
            an:layout_width="110dp"
            an:layout_height="wrap_content"
            an:layout_marginRight="16dp"
            an:layout_marginTop="20dp"
            an:ems="10"
            an:inputType="number"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextElectricityBillOf2ndFloor"/>

        <EditText
            an:id="@+id/editTextElectricityBillOf4thFloor"
            an:layout_width="110dp"
            an:layout_height="wrap_content"
            an:layout_marginRight="16dp"
            an:layout_marginTop="24dp"
            an:ems="10"
            an:inputType="number"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextElectricityBillOf3rdFloor"/>

        <TextView
            an:id="@+id/textView11"
            an:layout_width="wrap_content"
            an:layout_height="wrap_content"
            an:layout_marginLeft="16dp"
            an:layout_marginTop="36dp"
            an:text="Electricity Bill of 1st Floor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextSubmeterUnitCurrentInput"/>

        <EditText
            an:id="@+id/editTextElectricityBillOf1stFloor"
            an:layout_width="110dp"
            an:layout_height="wrap_content"
            an:layout_marginRight="16dp"
            an:layout_marginTop="24dp"
            an:ems="10"
            an:inputType="number"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextSubmeterUnitCurrentInput"/>

        <TextView
            an:id="@+id/textView15"
            an:layout_width="wrap_content"
            an:layout_height="wrap_content"
            an:layout_marginStart="16dp"
            an:layout_marginTop="44dp"
            an:text="Move 3rd floor motor bill to 4th floor?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>

        <Switch
            an:id="@+id/switchThirdFloorMotorBillTo4th"
            an:layout_width="wrap_content"
            an:layout_height="wrap_content"
            an:layout_marginStart="8dp"
            an:layout_marginTop="32dp"
            an:layout_marginEnd="16dp"
            an:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/editTextGasInput"/>

        <Button
            an:id="@+id/buttonCalculate"
            an:layout_width="match_parent"
            an:layout_height="wrap_content"
            an:layout_marginTop="40dp"
            an:text="Calculate"
            app:layout_constraintHorizontal_bias="0.442"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switchThirdFloorMotorBillTo4th"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>

